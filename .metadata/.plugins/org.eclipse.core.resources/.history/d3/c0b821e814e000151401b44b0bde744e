package desenhos;

public class Des_R implements Desenhar {
	
	private int SIZE = 0;
	
	@Override
	public void setSIZE(int a) {
		SIZE = a;	
	}

	public void desenhar() {
		for (int lin = 0;lin<SIZE;lin++){
			
			for (int col = 0;col<SIZE;col++){
				if (((lin) <= col) && (col <= ((SIZE-1) - lin))){
					int print = (col - SIZE/2);
					if (print < 0 ) {
					System.out.print(Math.abs(print) + 1);
					} else {
						System.out.print(print + 1);
					}					
				
				} else {
					System.out.print(" ");
				}
				
				if (col == (SIZE - 1))
					System.out.println();			
				
			}
		}
		
	}

}
